FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

ENV ASPNETCORE_ENVIRONMENT=Subscriber
ENV ASPNETCORE_URLS=http://+:8080
ARG BUILD_CONFIGURATION=Release

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["CrossCloudLoadBalancing.Web/CrossCloudLoadBalancing.Web.csproj", "."]
RUN dotnet restore "CrossCloudLoadBalancing.Web.csproj"
COPY ./CrossCloudLoadBalancing.Web .
WORKDIR "/CrossCloudLoadBalancing.Web/"
RUN dotnet build "CrossCloudLoadBalancing.Web.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
RUN dotnet publish "CrossCloudLoadBalancing.Web.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "CrossCloudLoadBalancing.Web.dll"]
